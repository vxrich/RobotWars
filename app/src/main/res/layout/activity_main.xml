<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/logo_trasp"
    android:orientation="vertical"
    tools:context="com.application.riccardo.robotwars.MainActivity"
    android:weightSum="1">

    <com.application.riccardo.robotwars.JoyStickView
        android:id="@+id/joy"
        android:layout_width="171dp"
        android:layout_height="166dp"
        app:padColor="#55ffffff"
        app:buttonColor="#55ff0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="19dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/vocal_control"
        android:id ="@+id/vocal"
        android:background="@drawable/vocal_control"
        android:layout_alignBottom="@+id/joy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <Switch
        android:text="Lama DX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lama_dx"
        android:layout_alignBottom="@+id/vocal"
        android:layout_alignStart="@+id/lama_sx"
        android:layout_marginBottom="16dp"
        android:layout_alignEnd="@+id/lama_sx" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/bluetooth"
        android:id ="@+id/bluetooth"
        android:background="@drawable/bluetooth"
        android:layout_above="@+id/joy"
        android:layout_alignStart="@+id/vocal" />

    <Switch
        android:text="Lama SX"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/lama_sx"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
